#include<stdio.h>
#include<math.h>

int getcoeff(int* a,int* b,int* c)
 {
  printf("Enter the coefficients:\n");
  scanf("%d%d%d",a,b,c);
  return 0;
 }

int computeroots(float* root1,float* root2,int a,int b,int c)
 {
  float discriminant;
  discriminant = (b*b)-(4*a*c);
  *root1= (-b+sqrt(discriminant))/(2*a);
  *root2= (-b-sqrt(discriminant))/(2*a);
  return discriminant;
 }

int output(float root1,float root2)
 {
  printf("Root 1: %.2f\n",root1);
  printf("Root 2: %.2f\n",root2); 
  return 0;
 }

int main()
 {
  int a,b,c;
  float root1,root2,discriminant;
  getcoeff(&a,&b,&c);
  discriminant=computeroots(&root1,&root2,a,b,c);
  if(discriminant>=0)
   output(root1,root2);
  else
   printf("Roots are not real!\n");
  return 0;
 }
